import numpy as np
import math 
# Osipenko Maksim 10.07.2001
A = 8                #кол-во букв в фамилии
B = 10               #дата рождения
C = 2001 + 7**3      #год + месяц рождения в 3й степени (число 2344)
e = 10**(-12)        #с точностью до e
func = lambda x: np.exp(A*x)-x**B+math.log(x**3,C) #функция, корни которой надо найти методом половинного деления
a = 0.01             #отрезок [a,b] - начальный интервал неопределенности + известно, что корень ему принадлежит 
b = 0.5
i = 0   
c = 1
if func(a)*func(b)>=0:
      print("Корней нет")
while ((b-a)>e):
    c=(a+b)/2        #середина интервала неопределенности 
    if((func(a)*func(c))<0): #если выполняется это условие, то искомый корень находится внутри левого отрезка 
        b=c          #сдвигаем границу
        a=a
    else:                    #если же условие не выполняется, то искомый корень находится внутри правого отрезка 
        a=c          #сдвигаем границу
        b=b
    i=i+1
print("i =", i)
print("Корень равен: x =",a)
print(func(a))
