import numpy as np
import math 
# Golovanov Kirill, 15.05.2001
# y'+ (2y+1)*ctg(x)=0 - данное уравнение
# y = 1/(2*C * sin(x)**2) - 1/2 - путем преобразования получаем данное уравнение
C=2001+5**3#константна при интегрировании
F=lambda x: 1/(C*2 * np.sin(x)**2)-1/2 #функция
a = 0 #начальные точки
b=100
e=10**(-12)#точность епс
c = (a+b)/2
i=0

#далее хочу обьявить такой цикл чтобы программа считала пока не дойдет до определенного значения

while True:
    c=(a+b)/2
    if(F(b)*F(c)<0): #если график между правой границей и серединой отрезка пересечет границу, значит где-то между ними есть корень
        a=c # сдинем правую границу
    else:
        b=c  #левую границу
    if ((b-a)<e):
        break
    i+=1
print("Корень функции x=",b , "; Значение функции в этой точке равно = ",F(a))
